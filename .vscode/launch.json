    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "LinuxLauncher",
            "request": "launch",
            "mainClass": "com.personal.springlessons.SpringLessonsApplication",
            "projectName": "spring-lessons",
            "vmArgs": "-Dspring.profiles.active=default,linux",
            "preLaunchTask": "start-podman-env",
            "postDebugTask": "stop-podman-env"
        },
        {
            "type": "java",
            "name": "WindowsLauncher",
            "request": "launch",
            "mainClass": "com.personal.springlessons.SpringLessonsApplication",
            "projectName": "spring-lessons",
            "vmArgs": "-Dspring.profiles.active=default,windows",
            "preLaunchTask": "start-podman-env",
            "postDebugTask": "stop-podman-env"
        }
    ]
}