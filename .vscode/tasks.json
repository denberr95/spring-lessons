{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cleanup-env",
      "type": "shell",
      "group": "none",
      "dependsOrder": "sequence",
      "dependsOn": [
        "podman-container-remove",
        "podman-volume-remove",
        "podman-system-prune",
        "shell-cleanup-folders"
      ]
    },
    {
      "label": "test-application",
      "type": "shell",
      "group": "test",
      "dependsOrder": "sequence",
      "dependsOn": [
        "podman-container-remove",
        "podman-volume-remove",
        "shell-cleanup-folders",
        "podman-compose-env-up",
        "mvn-clean",
        "mvn-spotless-apply",
        "mvn-package"
      ]
    },
    {
      "label": "start-podman-env",
      "type": "shell",
      "group": "test",
      "dependsOrder": "sequence",
      "dependsOn": [
        "podman-container-remove",
        "podman-volume-remove",
        "shell-cleanup-folders",
        "podman-compose-env-up",
        "mvn-clean",
        "mvn-spotless-apply",
        "mvn-compile"
      ]
    },
    {
      "label": "stop-podman-env",
      "type": "shell",
      "group": "test",
      "dependsOrder": "sequence",
      "dependsOn": [
        "podman-compose-env-stop"
      ]
    },
    {
      "label": "shell-cleanup-folders",
      "type": "shell",
      "command": "rm -rf bin logs",
      "windows": {
        "command": "rmdir /s /q bin && rmdir /s /q logs"
      },
      "group": "none"
    },
    {
      "label": "shell-create-folders",
      "type": "shell",
      "command": "mkdir logs",
      "group": "none"
    },
    {
      "label": "podman-volume-remove",
      "type": "shell",
      "command": "podman volume rm --force --all",
      "group": "none"
    },
    {
      "label": "podman-container-remove",
      "type": "shell",
      "command": "podman container rm --force --all",
      "group": "none"
    },
    {
      "label": "podman-system-prune",
      "type": "shell",
      "command": "podman system prune --force --all --volumes",
      "group": "none"
    },
    {
      "label": "podman-build-jvm-image",
      "type": "shell",
      "command": "podman build --rm=true --file Containerfile.jvm --tag spring-lessons:latest .",
      "dependsOrder": "sequence",
      "dependsOn": [
        "test-application"
      ],
      "group": "build"
    },
    {
      "label": "podman-compose-env-up",
      "type": "shell",
      "command": "podman-compose --project spring-lessons --file ./collections/compose.yaml up --force-recreate --remove-orphans --detach",
      "group": "test"
    },
    {
      "label": "podman-compose-env-stop",
      "type": "shell",
      "command": "podman-compose --project spring-lessons --file ./collections/compose.yaml stop",
      "group": "test"
    },
    {
      "label": "podman-compose-app-up",
      "type": "shell",
      "command": "podman-compose --project spring-lessons --file ./collections/compose.yaml --file ./collections/compose-app.yaml up --force-recreate --remove-orphans --detach",
      "group": "test",
      "dependsOrder": "sequence",
      "dependsOn": [
        "mvn-clean",
        "mvn-spotless-apply",
        "mvn-package-skip-tests"
      ]
    },
    {
      "label": "podman-compose-app-stop",
      "type": "shell",
      "command": "podman-compose --project spring-lessons --file ./collections/compose.yaml --file ./collections/compose-app.yaml stop",
      "group": "test"
    },
    {
      "label": "compile-source-code",
      "type": "shell",
      "group": "build",
      "dependsOrder": "sequence",
      "dependsOn": [
        "mvn-clean",
        "mvn-spotless-apply",
        "mvn-compile"
      ]
    },
    {
      "label": "mvn-test",
      "type": "shell",
      "command": "mvn test --file pom.xml --settings settings.xml",
      "group": "test"
    },
    {
      "label": "mvn-clean",
      "type": "shell",
      "command": "mvn clean --file pom.xml --settings settings.xml",
      "group": "build"
    },
    {
      "label": "mvn-compile",
      "type": "shell",
      "command": "mvn compile --file pom.xml --settings settings.xml",
      "group": "build"
    },
    {
      "label": "mvn-generate-sources",
      "type": "shell",
      "command": "mvn generate-sources --file pom.xml --settings settings.xml",
      "group": "build"
    },
    {
      "label": "mvn-package",
      "type": "shell",
      "command": "mvn package --file pom.xml --settings settings.xml -Dspring.profiles.active=default,linux",
      "windows": {
        "command": "mvn package --file pom.xml --settings settings.xml -Dspring.profiles.active=default,windows"
      },
      "group": "build"
    },
    {
      "label": "mvn-package-skip-tests",
      "type": "shell",
      "command": "mvn",
      "args": [
        "package",
        "--file",
        "pom.xml",
        "--settings",
        "settings.xml",
        "-Dspring.profiles.active=default,linux",
        "-DskipTests=true"
      ],
      "windows": {
        "command": "mvn",
        "args": [
          "package",
          "--file",
          "pom.xml",
          "--settings",
          "settings.xml",
          "-Dspring.profiles.active=default,windows",
          "-DskipTests=true"
        ]
      },
      "group": "build"
    },
    {
      "label": "mvn-dependencies-tree",
      "type": "shell",
      "command": "mvn dependency:tree --file pom.xml --settings settings.xml 1> logs/maven-dependency-tree.log",
      "windows": {
        "command": "mvn dependency:tree --file pom.xml --settings settings.xml > logs\\maven-dependency-tree.log"
      },
      "group": "build",
      "dependsOrder": "sequence",
      "dependsOn": [
        "shell-cleanup-folders",
        "shell-create-folders"
      ]
    },
    {
      "label": "mvn-display-dependency-updates",
      "type": "shell",
      "command": "mvn versions:display-dependency-updates --file pom.xml --settings settings.xml 1> logs/maven-dependency-updates.log",
      "windows": {
        "command": "mvn versions:display-dependency-updates --file pom.xml --settings settings.xml > logs\\maven-dependency-updates.log"
      },
      "group": "build",
      "dependsOrder": "sequence",
      "dependsOn": [
        "shell-cleanup-folders",
        "shell-create-folders"
      ]
    },
    {
      "label": "mvn-spotless-apply",
      "type": "shell",
      "command": "mvn spotless:apply --file pom.xml --settings settings.xml",
      "group": "build"
    },
    {
      "label": "pre-commit-autoupdate",
      "type": "shell",
      "command": "pre-commit",
      "args": [
        "autoupdate"
      ],
      "group": "none"
    },
    {
      "label": "pre-commit-run-all-files",
      "type": "shell",
      "command": "pre-commit",
      "args": [
        "run",
        "--all-files"
      ],
      "group": "none"
    }
  ]
}