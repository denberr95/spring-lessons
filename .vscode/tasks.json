{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cleanup-env",
            "type": "shell",
            "group": "none",
            "dependsOrder": "sequence",
            "dependsOn": [
                "podman-container-remove",
                "podman-volume-remove",
                "podman-system-prune",
                "shell-cleanup-folders",
            ]
        },
        {
            "label": "test-env-linux",
            "type": "shell",
            "group": "test",
            "dependsOrder": "sequence",
            "dependsOn": [
                "podman-container-remove",
                "podman-volume-remove",
                "shell-cleanup-folders",
                "podman-compose-env-up",
                "mvn-clean",
                "mvn-package-linux"
            ]
        },
        {
            "label": "test-env-windows",
            "type": "shell",
            "group": "test",
            "dependsOrder": "sequence",
            "dependsOn": [
                "podman-container-remove",
                "podman-volume-remove",
                "shell-cleanup-folders",
                "podman-compose-env-up",
                "mvn-clean",
                "mvn-package-windows"
            ]
        },
        {
            "label": "start-podman-env",
            "type": "shell",
            "group": "test",
            "dependsOrder": "sequence",
            "dependsOn": [
                "podman-container-remove",
                "podman-volume-remove",
                "shell-cleanup-folders",
                "podman-compose-env-up",
                "mvn-clean",
                "mvn-compile",
            ]
        },
        {
            "label": "stop-podman-env",
            "type": "shell",
            "group": "test",
            "dependsOrder": "sequence",
            "dependsOn": [
                "shell-backup-keycloak-realm",
                "podman-compose-env-stop",
            ]
        },
        {
            "label": "start-podman-app",
            "type": "shell",
            "group": "none",
            "dependsOrder": "sequence",
            "dependsOn": [
                "podman-container-remove",
                "podman-volume-remove",
                "podman-compose-env-up",
                "podman-compose-app-up",
            ]
        },
        {
            "label": "stop-podman-app",
            "type": "shell",
            "group": "none",
            "dependsOrder": "sequence",
            "dependsOn": [
                "podman-compose-app-stop",
                "podman-compose-env-stop",
            ]
        },
        {
            "label": "shell-cleanup-folders",
            "type": "shell",
            "command": "rm -rf bin logs",
            "group": "none",
        },
        {
            "label": "shell-backup-keycloak-realm",
            "type": "shell",
            "group": "none",
            "dependsOrder": "sequence",
            "dependsOn": [
                "shell-keycloak-grant-scripts",
                "shell-keycloak-export-realm"
            ]
        },
        {
            "label": "shell-keycloak-grant-scripts",
            "type": "shell",
            "command": "chmod +x ./container/keycloak/export-config.sh",
            "group": "none",
        },
        {
            "label": "shell-keycloak-export-realm",
            "type": "shell",
            "command": "./container/keycloak/export-config.sh",
            "group": "none",
        },
        {
            "label": "podman-volume-remove",
            "type": "shell",
            "command": "podman volume rm --force --all",
            "group": "none",
        },
        {
            "label": "podman-container-remove",
            "type": "shell",
            "command": "podman container rm --force --all",
            "group": "none",
        },
        {
            "label": "podman-system-prune",
            "type": "shell",
            "command": "podman system prune --force --all --volumes",
            "group": "none",
        },
        {
            "label": "podman-build-jvm-image-linux",
            "type": "shell",
            "command": "podman build --rm=true --file Containerfile.jvm --tag spring-lessons:latest .",
            "dependsOrder": "sequence",
            "dependsOn": [
                "test-env-linux",
                "podman-build-jvm-image"
            ],
            "group": "build",
        },
        {
            "label": "podman-build-jvm-image-windows",
            "type": "shell",
            "command": "podman build --rm=true --file Containerfile.jvm --tag spring-lessons:latest .",
            "dependsOrder": "sequence",
            "dependsOn": [
                "test-env-windows",
                "podman-build-jvm-image"
            ],
            "group": "build",
        },
        {
            "label": "podman-compose-env-up",
            "type": "shell",
            "command": "podman-compose --file ./container/compose.yaml up --force-recreate --remove-orphans --detach",
            "group": "test",
        },
        {
            "label": "podman-compose-app-up",
            "type": "shell",
            "command": "podman-compose --file ./deploy/compose.yaml up --force-recreate --remove-orphans",
            "group": "test",
        },
        {
            "label": "podman-compose-env-stop",
            "type": "shell",
            "command": "podman-compose --file ./container/compose.yaml stop",
            "group": "test",
        },
        {
            "label": "podman-compose-app-stop",
            "type": "shell",
            "command": "podman-compose --file ./deploy/compose.yaml stop",
            "group": "test",
        },
        {
            "label": "podman-machine-init",
            "type": "shell",
            "command": "podman machine init podman-machine-spring-lessons",
            "group": "none",
        },
        {
            "label": "podman-machine-start",
            "type": "shell",
            "command": "podman machine start podman-machine-spring-lessons",
            "group": "none",
        },
        {
            "label": "podman-machine-stop",
            "type": "shell",
            "command": "podman machine stop podman-machine-spring-lessons",
            "group": "none",
        },
        {
            "label": "podman-machine-remove",
            "type": "shell",
            "command": "podman machine rm podman-machine-spring-lessons --force",
            "group": "none",
        },
        {
            "label": "mvn-test",
            "type": "shell",
            "command": "mvn test --file pom.xml",
            "group": "test",
        },
        {
            "label": "mvn-clean",
            "type": "shell",
            "command": "mvn clean --file pom.xml",
            "group": "build",
        },
        {
            "label": "mvn-compile",
            "type": "shell",
            "command": "mvn compile --file pom.xml",
            "group": "build",
        },
        {
            "label": "mvn-package-linux",
            "type": "shell",
            "command": "mvn package --file pom.xml -Dspring.profiles.active=default,linux",
            "group": "build",
        },
        {
            "label": "mvn-package-windows",
            "type": "shell",
            "command": "mvn package --file pom.xml -Dspring.profiles.active=default,windows",
            "group": "build",
        },
        {
            "label": "mvn-dependencies-tree",
            "type": "shell",
            "command": "mvn dependency:tree --file pom.xml 1> logs/maven-dependency-tree.log",
            "group": "none",
        },
        {
            "label": "mvn-display-versions-updates",
            "type": "shell",
            "command": "mvn versions:display-dependency-updates --file pom.xml 1> logs/maven-dependency-updates.log",
            "group": "none",
        },
    ]
}