{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-local-environment",
            "type": "shell",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "podman-container-prune",
                "podman-volume-prune",
                "podman-compose-up",
                "mvn-clean",
                "mvn-compile",
            ]
        },
        {
            "label": "prepare-devcontainer-environment",
            "type": "shell",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "mvn-clean",
                "mvn-compile",
            ]
        },
        {
            "label": "stop-local-environment",
            "type": "shell",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "podman-compose-stop",
            ]
        },
        {
            "label": "podman-volume-prune",
            "type": "shell",
            "command": "podman volume prune --force",
            "group": "build",
        },
        {
            "label": "podman-container-prune",
            "type": "shell",
            "command": "podman container prune --force",
            "group": "build",
        },
        {
            "label": "podman-system-prune",
            "type": "shell",
            "command": "podman system prune --force --all --volumes",
            "group": "build",
        },
        {
            "label": "podman-build-jvm-image",
            "type": "shell",
            "command": "podman build --file Containerfile.jvm --tag spring-lessons:java-latest .",
            "group": "build",
        },
        {
            "label": "podman-run-container",
            "type": "shell",
            "command": "podman run --name spring-lessons spring-lessons:java-latest",
            "group": "build",
        },
        {
            "label": "podman-compose-up",
            "type": "shell",
            "command": "podman-compose --file ./container/compose.yaml up --force-recreate --remove-orphans --detach",
            "group": "build",
        },
        {
            "label": "podman-compose-stop",
            "type": "shell",
            "command": "podman-compose --file ./container/compose.yaml stop",
            "group": "build",
        },
        {
            "label": "mvn-clean",
            "type": "shell",
            "command": "mvn clean --file pom.xml",
            "group": "build",
        },
        {
            "label": "mvn-compile",
            "type": "shell",
            "command": "mvn compile --file pom.xml",
            "group": "build",
        },
        {
            "label": "mvn-package",
            "type": "shell",
            "command": "mvn package --file pom.xml",
            "group": "build",
        }
    ]
}